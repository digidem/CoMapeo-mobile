{
  "name": "comapeo-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build:backend": "node ./scripts/build-backend.mjs",
    "android": "npm run build:backend && npm run android-no-backend-rebuild",
    "android-no-backend-rebuild": "react-native run-android",
    "ios": "react-native run-ios",
    "prestart": "npm run build:translations && npm run build:intl-polyfills",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "format": "prettier \"src/**/*.{js,ts,jsx,tsx}\" --write",
    "deep-clean": "./scripts/deep-clean.sh",
    "build:translations": "node ./scripts/build-translations.js ",
    "build:intl-polyfills": "node ./scripts/build-intl-polyfills.js",
    "extract-messages": "formatjs extract 'src/frontend/**/*.{ts,tsx}' --ignore='**/*.d.ts' --format crowdin --out-file ./messages/en.json"
  },
  "dependencies": {
    "@bam.tech/react-native-image-resizer": "^3.0.7",
    "@formatjs/intl-locale": "^3.3.2",
    "@formatjs/intl-pluralrules": "^5.2.4",
    "@formatjs/intl-relativetimeformat": "^11.2.4",
    "@gorhom/bottom-sheet": "^4.5.1",
    "@mapeo/ipc": "^0.1.5",
    "@react-native-community/hooks": "^2.8.0",
    "@react-native-community/netinfo": "11.1.0",
    "@react-native-picker/picker": "2.6.1",
    "@react-navigation/bottom-tabs": "^6.3.1",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "@rnmapbox/maps": "^10.0.12",
    "@tanstack/react-query": "^5.12.2",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "cheap-ruler": "^3.0.2",
    "eventemitter3": "^5.0.1",
    "expo": "~50.0.8",
    "expo-camera": "~14.0.5",
    "expo-crypto": "~12.8.1",
    "expo-localization": "~14.8.3",
    "expo-location": "~16.5.4",
    "expo-secure-store": "~12.8.1",
    "expo-sensors": "~12.9.1",
    "lodash.isequal": "^4.5.0",
    "nanoid": "^5.0.1",
    "nodejs-mobile-react-native": "^18.17.7",
    "react": "18.2.0",
    "react-hook-form": "^7.49.2",
    "react-intl": "^6.4.4",
    "react-native": "0.73.5",
    "react-native-android-open-settings": "^1.3.0",
    "react-native-bootsplash": "^5.1.3",
    "react-native-confirmation-code-field": "^7.3.1",
    "react-native-device-info": "^10.13.1",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-indicators": "^0.17.0",
    "react-native-linear-gradient": "^2.5.4",
    "react-native-mmkv": "^2.10.1",
    "react-native-network-info": "^5.2.1",
    "react-native-progress": "^5.0.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-restart": "^0.0.27",
    "react-native-safe-area-context": "4.8.2",
    "react-native-scale-bar": "^1.0.6",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-vector-icons": "^10.0.3",
    "readable-stream": "^4.4.1",
    "rpc-reflector": "^1.3.10",
    "start-stop-state-machine": "^1.2.0",
    "tiny-typed-emitter": "^2.1.0",
    "uint8array-extras": "^0.5.0",
    "utm": "^1.1.1",
    "validate-color": "^2.2.4",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@formatjs/cli": "^6.2.0",
    "@mapeo/core": "9.0.0-alpha.4",
    "@mapeo/schema": "3.0.0-next.13",
    "@react-native-community/cli": "^12.3.6",
    "@react-native/babel-preset": "^0.73.21",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.5",
    "@react-native/typescript-config": "^0.74.0",
    "@testing-library/react-native": "^12.4.3",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.12",
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.58",
    "@types/react-native-indicators": "^0.16.2",
    "@types/react-native-vector-icons": "^6.4.8",
    "@types/react-test-renderer": "^18.0.0",
    "@types/utm": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "execa": "^8.0.1",
    "glob": "^9.3.0",
    "husky": "^8.0.0",
    "jest": "^29.6.3",
    "lint-staged": "^14.0.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.2",
    "react-native-svg-transformer": "^1.3.0",
    "react-test-renderer": "18.2.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "type-fest": "^4.5.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "prettier --write",
    "src/frontend/**/*.{ts,tsx}": "npm run extract-messages"
  }
}
